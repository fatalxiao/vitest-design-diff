{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "paths": {
            "vitest-design-diff": ["src"],
            "vitest-design-diff/*": ["src/*"]
        },
        "composite": true
    },
    "include": [
        "node_modules/@vitest/browser/matchers.d.ts",
        "node_modules/@vitest/browser/providers/playwright.d.ts",
        "types/**/*.d.ts",
        "src/**/*",
        "test/**/*",
        "vitest.config.ts"
    ]
}
