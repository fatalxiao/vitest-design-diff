{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "paths": {
            "vitest-design-diff": ["src"],
            "vitest-design-diff/*": ["src/*"]
        },
        "types": [
            "@vitest/browser/matchers",
            "@vitest/browser/providers/playwright"
        ]
    },
    "include": [
        "types/**/*.d.ts",
        "src/**/*",
        "test/**/*",
        "vitest.workspace.ts"
    ]
}
